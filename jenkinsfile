pipeline {
    agent any
    tools{
        maven 'M2_HOME'
    }
    stages ('Build') {
        steps {
            sh 'mvn clean'
            sh 'mvn install'
            sh 'mvn packages'
        }
    }
    stage ('Test') {
        steps {
            sh 'mvn tset'
            sleep 3
        }
    }
    stage ('Deploy') {
        steps {
            echo 'Deploy Step'
            sleep 10
        }
    }
    stage ('Docker') {
        steps {
            echo 'Image Steps'
        }
    }

}