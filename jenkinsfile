pipeline {
    agent any
    tools {
        maven 'M2_HOME'
    }
    stages {
        stage ('Build') {
            steps {
                sh 'mvn clean'
                sh 'mvn install'
                sh 'mvn packages'
        }
    }
        stage ('Test') {
            steps {
                sh 'mvn test'
                sleep 10
        }
    }
        stage ('Deploy') {
            steps {
               echo 'Deploy Step'  
        }
    }
        stage ('Docker') {
            steps {
               echo 'Image Step'
        }
    }

    }
}